<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_plant_scientific"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="12dp"
            android:textSize="18sp"
            android:textColor="#000"/>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/common_name">

            <TextView
                android:id="@+id/tv_plant_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="12dp"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_plant_favorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/tv_plant_common"
                android:src="@drawable/ic_favorites_border_black_24dp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_plant_pic_det"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_width="300dp"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/tv_plant_details"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textSize="15sp" />

    </LinearLayout>
</ScrollView>