<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.android.usdaplantindex.PlantSearchBySpeciesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:theme="@style/EditTextHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/plant_search_by_species_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorBrightText"
            android:layout_margin="4dp"
            android:hint="@string/plant_search_by_species_box_hint"/>

        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/plant_search_by_species_results"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/plant_search_by_species_loading_error_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="16dp"
                android:visibility="invisible"
                android:text="@string/loading_error_message" />

            <ProgressBar
                android:id="@+id/plant_search_by_species_loading_pb"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="16dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/plant_search_by_species_loading_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="32dp"
                android:text="" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
