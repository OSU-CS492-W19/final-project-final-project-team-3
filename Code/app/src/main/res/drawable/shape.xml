    android:shape="rectangle"
    android:layout_width="300dp"
    android:gravity="center"
    android:layout_height="300dp"
    android:alpha="0.5">

    <solid
        android:color="@color/colorBubbleBackground" >
    </solid>

    <stroke
        android:width="2dp"
        android:color="@color/colorBubbleBackground" >
    </stroke>

    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"    >
    </padding>

    <corners
        android:radius="11dp"   >
    </corners>

</shape>